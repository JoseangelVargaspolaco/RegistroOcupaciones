@page "/C_Prestamos"
@inject PrestamosBLL prestamosBLL


<EditForm Model="Datos">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-header text-center">
            <h3>Consulta Prestamos</h3>

        </div>


        <div class="card-body">
            <form>
                <div class="form-group text-center">

                   <button type="button" class="bi bi-file-ppt-fill btn btn-lg btn-info" @onclick="Buscar"> Generar Tabla Prestamos</button>

                </div>
            </form>
        </div>
        <table class="table table-secondary">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>PrestamoId</th>
                    <th>Fecha</th>
                    <th>Vence</th>
                    <th>PersonaId</th>
                    <th>Concepto</th>
                    <th>Monto</th>
                    <th>Balance</th>
                    <th>Ver</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prestamos in Datos)
                {
                    <tr>
                        <td>@prestamos.PrestamoId</td>
                        <td>@prestamos.Fecha</td>
                        <td>@prestamos.Vence</td>
                        <td>@prestamos.PersonaId</td>
                        <td>@prestamos.Concepto</td>
                        <td>@prestamos.Monto</td>
                        <td>@prestamos.Balance</td>
                        <td><a href="prestamos/@prestamos.PersonaId">Ver</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</EditForm>

@code {

    public Prestamos prestamos { set; get; } = new Prestamos();
    public Personas personas { get; set; } = new Personas();
    public List<Prestamos> Datos { get; set; } = new List<Prestamos>();
    public List<Personas> Dato { get; set; } = new List<Personas>();
    public void Buscar()
    {
        Datos = prestamosBLL.GetPrestamos(o => true);
        Dato = prestamosBLL.GetPersonas(o => true);
    }

}